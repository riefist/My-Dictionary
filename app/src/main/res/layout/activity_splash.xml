<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context="com.muhamadarief.mykamus.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/img_dictionary"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/dictionary"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_dictionary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Dictionary"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="serif"/>
    </LinearLayout>



    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_prepare"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/txt_prepare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Preparing Database..."
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"/>


</RelativeLayout>
